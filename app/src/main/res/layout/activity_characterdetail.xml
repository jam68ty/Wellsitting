<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="100"
    android:background="@drawable/backgroud_all"
    tools:context=".Characterdetail">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background" />

    <ImageView
        android:id="@+id/detail_pic"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="155dp"

        />

    <TextView
        android:id="@+id/detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:textColor="#834683"
        android:textSize="50dp"
        android:fontFamily="@font/texttype1"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/detail_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="200dp"
        android:textColor="#834683"
        android:fontFamily="@font/texttype1"
        />

    <TextView
        android:id="@+id/detail_intro_brief"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="580dp"
        android:textColor="#834683"
        android:fontFamily="@font/texttype1"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background_partof" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/textbox"
        android:layout_marginTop="500dp"
        />

    <ImageButton
        android:id="@+id/detail_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="170dp"
        android:background="#00000000"
        android:padding="0dp"
        android:scaleType="centerInside"
        android:src="@drawable/btn_start_l"
        />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="186dp"
        android:padding="0dp"
        android:text="返回"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:fontFamily="@font/texttype1"

        />

</RelativeLayout>