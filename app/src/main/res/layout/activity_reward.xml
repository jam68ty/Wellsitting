<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud_all">

    <ImageView
        android:id="@+id/imageAccount"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:padding="0dp"
        android:scaleType="centerInside"
        android:src="@drawable/pageall_title" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageAccount"
        android:layout_alignLeft="@+id/imageAccount"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="135dp"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="62dp"
        android:layout_marginRight="135dp"
        android:text="獎 勵 設 定"
        android:textColor="#4169E1"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/rewardtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="clip_horizontal"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="160dp"
        android:lineSpacingExtra="20dp"
        android:text="維持正確坐姿________分鐘\n即可"
        android:textColor="#4169E1"
        android:textSize="25dp" />

    <ImageButton
        android:id="@+id/btn_plus"
        android:layout_width="39dp"
        android:layout_height="33dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="215dp"
        android:padding="0dp"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/plus" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="270dp"
        android:background="?android:attr/listDivider" />

    <Spinner
        android:id="@+id/spinner"
        android:entries="@array/time"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="208dp"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="546dp" />


</RelativeLayout>










