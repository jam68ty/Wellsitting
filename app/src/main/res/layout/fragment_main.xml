<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud_all"
    tools:context=".MainFragment">

    <!-- TODO: Update blank fragment layout -->


    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="wrap_content"
        android:layout_height="196dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:scaleType="centerInside"
        android:src="@drawable/homepage_logo" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="294dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="400dp"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/texttype1"
        android:gravity="center"
        android:padding="0dp"
        android:text="Hi，親愛的使用者\n再_______分鐘\n就可以領取代幣獎勵囉~"
        android:textColor="#4169E1"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/iv_sign_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="金幣+25"
        android:textColor="#FFC125"
        android:textSize="24sp"
        android:visibility="gone" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_sign"
            android:layout_width="181dp"
            android:layout_height="140dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="220dp"
            android:clickable="true"
            android:src="@drawable/sign_selector" />

        <ImageView
            android:id="@+id/iv_redpoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="260dp"
            android:src="@drawable/icon_red_dot"
            android:visibility="visible" />

    </FrameLayout>

    <TextView
        android:id="@+id/tv_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/texttype1"
        android:gravity="center"
        android:text="coin：0"
        android:textColor="	#3c3c3c"
        android:textSize="26sp"

        />

    <!--悅琦的計時器-->

    <TextView
        android:id="@+id/timeremains"
        android:layout_width="37dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="422dp"
        android:textColor="#4169E1"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/start"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="330dp"
        android:background="@drawable/btn_green_l"
        android:fontFamily="@font/texttype1"
        android:text="start"
        android:textSize="20dp" />

    <!--<Button-->
    <!--android:id="@+id/stop"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_marginTop="100dp"-->
    <!--android:text="stop" />-->

    <Button
        android:id="@+id/reset"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="330dp"
        android:background="@drawable/btn_green_d"
        android:fontFamily="@font/texttype1"
        android:text="reset"
        android:textSize="20dp" />


    <TextView
        android:id="@+id/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="550dp"
        android:text="1" />

    <TextView
        android:id="@+id/childValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dp"
        android:text="2" />


</FrameLayout>

