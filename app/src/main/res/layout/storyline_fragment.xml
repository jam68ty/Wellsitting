<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud_all"
    >




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/story_title"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textColor="#FFFFFF"
            android:hint="標題"
            android:layout_gravity="center"

            />



        <ImageView
            android:id="@+id/story_background"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_gravity="center"
            />




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:background="@drawable/dialog"
            >

            <TextView
                android:id="@+id/story_name"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                />

            <TextView
                android:id="@+id/story_content"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:textColor="#8C0044"
                android:hint="內文"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_gravity="center"

                />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <Button
                android:id="@+id/story_menu"
                android:layout_width="125dp"
                android:layout_height="45dp"

                android:layout_marginRight="30dp"
                android:layout_marginLeft="50dp"
                android:background="@drawable/story_back"
                android:text="主選單"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text=""/>

            <Button
                android:id="@+id/story_next"
                android:layout_width="125dp"
                android:layout_height="45dp"
                android:text="下一步"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="60dp"
                android:background="@drawable/story_next"
                />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/story_head"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="375dp"
        android:layout_marginLeft="280dp"

        />




</RelativeLayout>